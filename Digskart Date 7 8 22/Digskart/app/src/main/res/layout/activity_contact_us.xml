<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:gravity="center"
            android:text="Contact Us"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_100sdp"
        android:background="@drawable/button_background_contac"
        android:fontFamily="@font/quicksandbold"
        android:gravity="center"
        android:padding="10dp"
        android:text="FAQ s"
        android:textSize="@dimen/_20sdp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/quicksandbold"
        android:background="@drawable/button_background_contac"
        android:padding="10dp"
        android:textSize="@dimen/_20sdp"
        android:text="Our Contact Details"
        android:gravity="center" />

    <RelativeLayout
        android:id="@+id/chatdetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text2"
        android:layout_marginTop="20dp"
        android:background="@drawable/body_background"
        android:visibility="visible">

        <ImageView
            android:id="@+id/cancdel"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/cancled_t"/>

        <RelativeLayout
            android:id="@+id/lay_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="@dimen/_100sdp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_25sdp"
                android:src="@drawable/contact"
                app:tint="@color/black"/>


            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Chat Our Support Teams"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/lay_one"
            android:background="@drawable/background"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_25sdp"
                android:src="@drawable/email"
                app:tint="@color/black"/>

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="support@digkart.com"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/lay_two"
            android:background="@drawable/background"
            android:backgroundTint="@color/white"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:src="@drawable/dialog"
                app:tint="@color/black"/>

            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Chat Our Support Teams"
                android:textColor="@color/black"
                android:textColorHint="@color/text_gray" />

        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>